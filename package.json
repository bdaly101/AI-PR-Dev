{
  "name": "ai-pr-dev",
  "version": "1.0.0",
  "description": "AI PR Reviewer & Dev Agent - A GitHub App that automates code reviews using GPT-4 and responds to slash commands",
  "main": "dist/index.js",
  "bin": {
    "ai-pr": "./dist/cli/index.js",
    "ai-pr-mcp": "./dist/mcp/server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "mcp": "ts-node src/mcp/server.ts",
    "cli": "ts-node src/cli/index.ts",
    "setup-cursor": "node scripts/generate-cursor-config.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "github",
    "ai",
    "code-review",
    "gpt-4",
    "automation",
    "github-app",
    "pull-request",
    "code-reviewer",
    "claude",
    "openai",
    "mcp",
    "cursor"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bdaly101/AI-PR-Dev.git"
  },
  "homepage": "https://github.com/bdaly101/AI-PR-Dev#readme",
  "bugs": {
    "url": "https://github.com/bdaly101/AI-PR-Dev/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs",
    "scripts"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@fastify/rate-limit": "^9.1.0",
    "@modelcontextprotocol/sdk": "^1.24.2",
    "@octokit/auth-app": "^6.0.3",
    "@octokit/plugin-retry": "^8.0.3",
    "@octokit/plugin-throttling": "^11.0.3",
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "^12.0.10",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "commander": "^14.0.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "openai": "^4.20.1",
    "pino": "^10.1.0",
    "typescript": "^5.3.3",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.1",
    "nock": "^13.5.0",
    "pino-pretty": "^13.1.3",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "vitest": "^1.6.0"
  }
}
